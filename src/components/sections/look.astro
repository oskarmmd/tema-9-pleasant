<style>
  .lookbook-wrapper {
    display: flex;
    height: 100vh;
  }

  .lookbook-left {
    flex: 1;
    position: relative;
  }

  .lookbook-left img {
    position: sticky;
    top: 0;
    width: 100%;
    height: 100vh;
    object-fit: cover;
  }

  .lookbook-right {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    overflow-y: scroll;
    padding-left: 2rem;
    gap: 2rem;
  }

  /* .item {
    margin-bottom: 4rem;
  } */

  .lookbook-wrapper.reverse {
    flex-direction: row-reverse;
  }

  @media (max-width: 768px) {
    .lookbook-wrapper {
      flex-direction: column;
    }

    .lookbook-left img {
      position: relative;
      height: auto;
    }

    .lookbook-right {
      overflow: visible;
    }
  }
</style>
