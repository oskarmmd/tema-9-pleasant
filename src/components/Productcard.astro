---
import Products from '../data/products.json';
---



{Products.map(product => (
 <div class="card">
<div class="img-container">
  <a href="/singleView">
  <img src={product.images[0]} alt={product.title} /></a>

</div>
  <h4>{product.title}</h4>
  <p>{product.price}</p>
</div>
))}

{Products.map(product => (
  <div class="card">
   <div class="img-container">
  <img src={product.images[0]} alt={product.title} />
</div>
   <h4>{product.title}</h4>
   <p>{product.price}</p>
 </div>
 ))}


<style>
  .card {
    text-align: center;
    background-color: #f3f0e7;
    padding: 1rem;
    border-radius: 2px;
    overflow: hidden;
  }

  .card:hover{
    border: solid 1px black;
  }

  .card img {
    width: 100%;
    max-height: 400px;
    object-fit: cover;
    border-radius: 4px;  
    transition: transform 0.3s ease;
  }

.img-container {
  position: relative;
  overflow: hidden;
  aspect-ratio: 3 / 4; /* optional: keep consistent aspect ratio */
  border-radius: 4px;
}

.img-container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: transform 0.3s ease;
}

.img-container:hover img {
  transform: scale(4);
}



.img-container::after {
  content: "Tilf√∏j til kurv";
  width: 90%;
  position: absolute;
  bottom: 1rem;
  left: 50%;
  transform: translateX(-50%) translateY(10px);
  background: white;
  color: black;
  padding: 0.5rem 1rem;
  border: 1px solid black;
  font-weight: bold;
  font-size: 0.9rem;
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease, transform 0.3s ease;
}

.card:hover .img-container::after {
  opacity: 0.8;
  transform: translateX(-50%) translateY(0);
}

</style>
